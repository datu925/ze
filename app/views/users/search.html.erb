<h3>Query Results</h3> <hr>
<h3>Word Frequency</h3>
<% @frequency.each do |key,val| %>
<p><strong>Key:</strong> <%= key %> <strong>Frequency:</strong> <%= val %></p>
<% end %>

<h3>Samples:</h3>
<ul>
<% @sample_matches.each do |sample| %>
<%=  markup_keywords(sample).html_safe %>
<% @key_matches.each do |s| %>
<% if s.sample_id == sample.id %>
	<li><p><strong>Text:</strong> <%= s.text %></p>
	<p><strong>Sentiment score:</strong> <%= s.sentiment_score %></p>
	<p><strong>Sentiment type:</strong> <span class ="<%= s.sentiment_type %>"><%= s.sentiment_type %></span></p>
	<p><strong>Gender:</strong> <span class ="<%= s.gender %>"><%= s.gender %></span></p>
	<p><strong>Sample Id:</strong><%= s.sample_id %></p></li>
<% end %>
<% end %>
<% end %>
</ul>
