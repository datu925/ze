<%= link_to "Back to Home", '/' %><br>

<% if current_user == @user %>
<%= link_to "Edit Profile", edit_user_path(@user) %><br>
<% end %>

<% if logged_in? %>
<h1><%= @user.email %></h1>
<% end %>

<form action="/users/search">
	<input name="query" placeholder="search keywords">
</form>

<%= link_to("Generate sample scatter", user_path(@user), remote: true, "data-type" => "json", id: "scatter-link")  %>

<div id="scatter">
</div>

<ul>
	<% @user.samples.each do |sample| %>

	<li><%= sample.content %></li>

	<% end %>
</ul>

